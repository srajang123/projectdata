<h2 id="title" class="title">Log&nbsp;In</h2>
<div class="error"></div>
<form name="loginForm" action="/login" method="post">
    <table id="signup" class="form">
        <tr>
            <td>
                <select name="login" id="type" class="text">
                <option value="-1">--Select Profile--</option> 
                <option value="0">Student</option> 
                <option value="1">Teacher</option>  
                </select>
            </td>
        </tr> 
        <tr>
            <td><input type="text" name="email"  id="email" class="text" placeholder="E-mail"><br><br></td>
        </tr>
        <tr>
            <td><input type="password" name="password" id="password" class="text" placeholder="Password"><br><br></td>
        </tr>
        <tr>
            <td><input type="submit" id="submit" class="button" value="LOGIN"><a href="/resetpass" id="reset" class="button">Forget Password</a></td>
        </tr>
    </table>
</form>